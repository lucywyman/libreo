            option(value='Washington') Washington
            option(value='West Virginia') West Virginia
            option(value='Wisconsin') Wisconsin
            option(value='Wyoming') Wyoming
    .input
        p Zip:
        input.box(type='text', name='zip', required=required, size=40)   
    .input
        p Email:
        input.box(type='text', name='email', required=required, size=40)   
    .input
        p Username:
        input.box(type='text', name='username', required=required, size=40)   
    .input
        p Password:
        input.box(type='password', name='password', required=required, size=40) 
    .input
        p Please retype your password:
        input.box(type='password', name='password2', required=required, size=40) 
    input.submit(type='submit', name='register', value='Register')

