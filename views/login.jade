extends base

block content
    p.message #{message}
    form.libreoForm(method='post', action='/loginAction')
        h3 Login
        .input
            p Username:
            input.box(type='text', name='username', required=required, size=30)
        .input
            p Password:
            input.box(type='text', name='password', required=required, size=30)
        input.submit(type='submit', name='submit', value='Login')

